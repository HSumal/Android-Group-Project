<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="cs.b07.cscb07courseproject.AdminMain">

    <Button
        android:text="@string/view_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewClientInfoButton"
        android:gravity="center"
        android:onClick="viewClients"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/view_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewFlightButton"
        android:gravity="center"
        android:onClick="viewFlights"
        android:layout_below="@+id/viewClientInfoButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchItinerary"
        android:text="@string/search_itinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_below="@+id/searchFlight"
        android:layout_alignLeft="@+id/addFlightsFromFileButton"
        android:layout_alignStart="@+id/addFlightsFromFileButton"
        android:onClick="searchItinerary" />

    <Button
        android:text="Add Flights from File"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addFlightsFromFileButton"
        android:gravity="center"
        android:layout_below="@+id/viewFlightButton"
        android:layout_centerHorizontal="true"
        android:onClick="getFlightFile" />

    <Button
        android:id="@+id/searchFlight"
        android:text="@string/search_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:onClick="searchFlights"
        android:layout_below="@+id/addFlightsFromFileButton"
        android:layout_alignLeft="@+id/searchItinerary"
        android:layout_alignStart="@+id/searchItinerary" />

</RelativeLayout>
