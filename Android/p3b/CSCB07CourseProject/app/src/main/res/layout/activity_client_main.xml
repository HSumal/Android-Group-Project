<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.b07.cscb07courseproject.ClientMain"
    android:id = "@+id/activity_client_main"

    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id = "@+id/editClient"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text="@string/edit_client"
        android:layout_margin="5dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/background_light"
        android:onClick="editProfile" />

    <Button
        android:id = "@+id/viewItinerary"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text="@string/view_itinerary"
        android:onClick="viewItinerary"
        android:layout_margin="5dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/background_light" />

    <Button
        android:id="@+id/searchFlight"
        android:text="@string/search_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/background_light"
        android:onClick="searchFlights"/>

    <Button
        android:id="@+id/searchItinerary"
        android:text="@string/search_itinerary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:onClick="searchItinerary"
        android:background="@android:color/background_light" />

</LinearLayout>
